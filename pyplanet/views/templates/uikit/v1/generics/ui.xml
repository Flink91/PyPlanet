{% macro scrollable(posX=0, posY=0, width=50, height=50, scrollWidth=0, scrollHeight=150) %}
<frame pos="{{posX}} {{posY}}">
  <frame class="uiScrollable" scroll="1" size="{{width - 5}} {{height - 5}}"
         scrollmax="{{scrollWidth}} {{scrollHeight}}" >
    <frame>
      {{ caller() }}
    </frame>
  </frame>
  <frame pos="{{width}} 0" class="uiScrollbarControl">
    <quad pos="0 -4" size="4 10" halign="right" valign="top" class="uiScrollbar" data-axis="Y" bgcolor="fffa"
          bgcolorfocus="ffff" scriptevents="1"/>
    <label size="4 4" sizen="4 4" width="4" height="4" halign="right" valign="top" text="⏶" scriptevents="1"
           focusareacolor1="aaa" focusareacolor2="777"/>
    <label pos="0 -{{height}}" size="4 4" sizen="4 4" halign="right" valign="bottom" text="⏷" scriptevents="1"
           focusareacolor1="aaa" focusareacolor2="777"/>
    <quad size="4 {{height}}" halign="right" valign="top" bgcolor="000a"/>
  </frame>
  <quad pos="0 0" size="{{width}} {{height}}" z-index="-20" bgcolor="0004"/>
</frame>
{% endmacro %}

