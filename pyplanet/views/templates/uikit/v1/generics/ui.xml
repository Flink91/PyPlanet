       class="uiCheckboxElement" scriptevents="1" focusareacolor1="0000" focusareacolor2="0000"/>
  </frame>
  {% endmacro %}

  {% macro checkbox_group(text='', name='checkbox', group="group1", posX=0, posY=0, checked=0, disabled=0, id='') %}
