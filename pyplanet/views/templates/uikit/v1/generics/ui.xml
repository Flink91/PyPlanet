{% macro dropdown(values, name='', selectedIndex=0, posX=0, posY=0, width=26, height=5) %}
<frame pos="{{posX}} {{posY}}" class="uiContainer uiDropdown" data-selected="{{selectedIndex}}" data-open="0">
  <label pos="{{width - 5}} 0" size="{{width}} {{height}}" z-index="2" class="uiSelectElement" text="⏷"
         textcolor="fff"/>
  <label pos="0 -{{height/2}}" size="{{width}} {{height}}"  textsize="1.2" textprefix=" " text="Select..." focusareacolor1="000"
         focusareacolor2="111" valign="center" scriptevents="1" class="uiSelectElement"/>
  <entry pos="900 900" size="26 5" textemboss="1" text="1" textsize="1.2" valign="center2" halign="center"
         textformat="Basic" name="{{name}}"/>
  {% for entry in values %}
      {% if (loop.first) %}
         <frame pos="0 -{{height}}" z-index="10" class="uiDropdownSelect" size="{{width}} {{loop.length*5}}">
      {% endif %}
    <label pos="0 -{{loop.index * height - height/2}}" size="{{width}} {{height}}" text="{{entry.text}}"
           data-value="{{entry.value}}" valign="center" data-index="{{loop.index0}}" focusareacolor1="000" focusareacolor2="222"
           scriptevents="1"  textsize="1.2" class="uiSelectElement"/>
    {% endfor %}
  </frame>
</frame>
{% endmacro %}

{% macro input_masked(text='', name='', posX= 0, posY=0, width=50) %}
<frame pos="{{ posX }} {{ posY }}" class="uiContainer uiInputMasked" data-type="Password">
  <entry pos="0 0" size="{{ (width - 5) }} 5" textsize="1.2" valign="center" focusareacolor1="0003"
         focusareacolor2="FFF2" selecttext="1" default="{{ text|default('', True) }}" textformat="Password" name="{{ name }}"/>
  <frame pos="{{ (width - 2.5) }} 0" class="">
    <quad size="10 10" scale="0.5" style="Bgs1InRace" colorize="ddd" substyle="BgColorContour" halign="center" valign="center2"/>
    <label size="4 4" text="" class="uiMaskedToggle" halign="center" valign="center2" focusareacolor1="0000"
           focusareacolor2="ddd" scriptevents="1" translate="0" textsize="1.2"/>
  </frame>
</frame>
{% endmacro %}

