{% macro checkbox(text = '', name='checkbox', posX=0, posY=0, checked=0, disabled=0) %}
<frame pos="{{posX}} {{posY}}" class="uiContainer uiCheckbox" data-checked="{{checked}}" data-disabled="{{disabled}}">
      <entry pos="900 900" z-index="0" size="6 6" textemboss="1" text="1" textsize="3" valign="center2" halign="center" textformat="Basic" name="{{ name }}" scriptevents="1" />
      <label pos="6 -2.5" z-index="0" size="43 5" text="{{ text }}" textsize="2" scriptevents="1" focusareacolor1="0000" focusareacolor2="0000" valign="center" />
      <label pos="3.5 -2" z-index="0" size="6 6" textemboss="1" textsize="4" scale="0" text="✔" valign="center2" halign="center" class="uiCheckboxElement" scriptevents="1" focusareacolor1="0000" focusareacolor2="0000" />
      <label pos="3 -3" z-index="0" size="6 6" textemboss="1" textsize="4" text="⬜" valign="center2" halign="center" class="uiCheckboxElement" scriptevents="1" focusareacolor1="0000" focusareacolor2="0000"/>
</frame>
{% endmacro %}

{% macro button(text='Default', action='', posX=0, posY=0, width=18, height=5, color="777", bgcolor="0000") %}
<frame pos="{{posX + (width/2)}}  {{posY - (height/2)}}" class="uiContainer uiButton" data-action="{{action}}">
  <label size="{{width}} {{height}}" text="{{text}}" class="uiButtonElement" halign="center" valign="center" focusareacolor1="{{bgcolor}}" focusareacolor2="{{color}}" scriptevents="1" translate="0" textsize="2"/>
</frame>
{% endmacro %}

{% macro decoratedbutton(text='Default', action='', posX=0, posY=0, width=18, height=5, color="777") %}
<frame pos="{{posX + (width/2)}}  {{posY - (height/2)}}" class="uiContainer uiButton" data-action="{{action}}" >
  <quad size="{{width}} {{height}}" style="Bgs1InRace" colorize="{{color}}" substyle="BgColorContour" halign="center" valign="center2" />
  <label size="{{width-1}} {{height-1}}" text="{{text}}" class="uiButtonElement" halign="center" valign="center2" focusareacolor1="0000" focusareacolor2="{{color}}" scriptevents="1" translate="0" textsize="2"/>
</frame>
{% endmacro %}

