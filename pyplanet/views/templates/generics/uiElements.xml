{% macro checkbox(text = '', name='checkbox', posX=0, posY=0, checked=0, disabled=0, id='') %}
<frame pos="{{posX}} {{posY}}" {% if id != "" %}id="{{id}}"{% endif %} class="uiContainer uiCheckbox" data-checked="{{checked}}" data-disabled="{{disabled}}">
      <entry pos="900 900" z-index="0" size="6 6" textemboss="1" text="1" textsize="3" valign="center2" halign="center" textformat="Basic" name="{{ name }}" scriptevents="1" />
      <label pos="6 -2.5" z-index="0" size="100 5" text="{{ text }}" textsize="2" scriptevents="1" focusareacolor1="0000" focusareacolor2="0000" valign="center" />
      <label pos="2.5 -2" z-index="0" size="6 6" textemboss="0" textsize="3" scale="0" text="✓" valign="center2" halign="center" class="uiCheckboxElement" scriptevents="1" focusareacolor1="0000" focusareacolor2="0000" />
      <label pos="2 -3" z-index="0" size="6 6" textemboss="0" textsize="4" text="⬜" valign="center2" halign="center" class="uiCheckboxElement" scriptevents="1" focusareacolor1="0000" focusareacolor2="0000"/>
</frame>
{% endmacro %}

{% macro button(text='Default', action='', posX=0, posY=0, width=18, height=5, color="aaaa", bgcolor="0000", halign="center") %}
  {% if halign == "center" %}
    <frame pos="{{posX + (width/2)}}  {{posY - (height/2)}}" class="uiContainer uiButton" data-action="{{action}}">
  {% else %}
    <frame pos="{{posX}} {{posY - (height/2)}}" class="uiContainer uiButton" data-action="{{action}}">
  {% endif %}
    <label size="{{width}} {{height}}" text="{{text}}" class="uiButtonElement" halign="{{halign}}" valign="center" focusareacolor1="{{bgcolor}}" focusareacolor2="{{color}}" scriptevents="1" translate="0" textsize="1.2"/>
</frame>
{% endmacro %}

{% macro decoratedbutton(text='Default', action='', posX=0, posY=0, width=18, height=5, color="aaaa") %}
<frame pos="{{posX + (width/2)}}  {{posY - (height/2)}}" class="uiContainer uiButton" data-action="{{action}}" >
  <quad size="{{width}} {{height}}" style="Bgs1InRace" colorize="{{color}}" substyle="BgColorContour" halign="center" valign="center2" />
  <label size="{{width-1}} {{height-1}}" text="{{text}}" class="uiButtonElement" halign="center" valign="center2" focusareacolor1="0000" focusareacolor2="{{color}}" scriptevents="1" translate="0" textsize="1.2"/>
</frame>
{% endmacro %}

{% macro confirmbutton(text='Default', action='', posX=0, posY=0, width=18, height=5, color="aaa") %}
<frame pos="{{posX + (width/2)}}  {{posY - (height/2)}}" class="uiContainer uiButton" data-action="{{action}}" >
  <quad size="{{width}} {{height}}" style="Bgs1InRace" colorize="{{color}}" substyle="BgColorContour" halign="center" valign="center2" />
  <label size="{{width-1}} {{height-1}}" text="{{text}}" class="uiConfirmButtonElement" halign="center" valign="center2" focusareacolor1="0000" focusareacolor2="{{color}}" scriptevents="1" translate="0" textsize="1.2"/>
</frame>
{% endmacro %}

{% macro dropdown(values, name='', selectedIndex=0, posX=0, posY=0, width=26, height=5) %}
<frame pos="{{posX}} {{posY}}" class="uiContainer uiDropdown" data-selected="{{selectedIndex}}" data-open="0">
      <label pos="{{width - 5}} 0" size="{{width}} {{height}}" z-index="2" class="uiSelectElement" text="⏷"  textcolor="fff" />
      <label pos="0 0"  size="{{width}} {{height}}" textprefix=" " text="Select..." focusareacolor1="000" focusareacolor2="111" scriptevents="1" class="uiSelectElement"/>
      <entry pos="900 900" size="26 5" textemboss="1" text="1" textsize="3" valign="center2" halign="center" textformat="Basic" name="{{name}}" />
      {% for entry in values %}
          {% if (loop.first) %}
             <frame pos="0 -{{height}}" class="uiDropdownSelect" size="{{width}} {{loop.length*5}}">
          {% endif %}
           <label pos="0 -{{loop.index0 * height}}"  size="{{width}} {{height}}" text="{{entry.text}}" data-value="{{entry.value}}" data-index="{{loop.index0}}" focusareacolor1="000" focusareacolor2="222" scriptevents="1" class="uiSelectElement"/>
      {% endfor %}
      </frame>
</frame>
{% endmacro %}


{% macro scrollable(posX= 0, posY=0, width=50, height=50, scrollY=True, scrollX=False) %}
<frame pos="{{posX}} {{posY}}">
   <!-- <quad size="{{width}} {{height}}" style="Bgs1InRace" substyle="BgColorContour"/> -->
    <quad size="0" style="Bgs1InRace" substyle="BgColorContour"/>
    <frame size="{{width - 5}} {{height - 5}}">
        <frame>
          {{ caller() }}
        </frame>
    </frame>
    {% if scrollY %}
    <frame pos="{{width}} 0" class="uiScrollbarControl">
        <quad pos="0 -4" size="4 10" halign="right" valign="top" class="uiScrollbar" data-axis="Y" bgcolor="fffa" bgcolorfocus="ffff" scriptevents="1"/>
        <label size="4 4" sizen="4 4" width="4" height="4" halign="right" valign="top" text="⏶" scriptevents="1" focusareacolor1="aaa" focusareacolor2="777"/>
        <label pos="0 -{{height}}" size="4 4" sizen="4 4"  halign="right" valign="bottom" text="⏷" scriptevents="1" focusareacolor1="aaa" focusareacolor2="777"/>
        <quad size="4 {{height}}"  halign="right" valign="top" bgcolor="000a"/>
    </frame>
    {% endif %}
    {% if scrollX %}
    <frame pos="0 -{{height +4}}"  class="uiScrollbarControl">
        <quad pos="4 0" size="10 4" halign="left" valign="bottom" class="uiScrollbar" data-axis="X" bgcolor="fffa" bgcolorfocus="ffff" scriptevents="1"/>
        <label size="4 4"   halign="left" valign="bottom" text="⏴" scriptevents="1" focusareacolor1="aaa" focusareacolor2="777"/>
        <label pos="{{width}} 0"  size="4 4"  halign="right" valign="bottom" text="⏵" scriptevents="1" focusareacolor1="aaa" focusareacolor2="777"/>
        <quad size="{{width}} 4"  halign="left" valign="bottom" bgcolor="000a"/>
    </frame>
 {% endif %}
</frame>
{% endmacro %}
