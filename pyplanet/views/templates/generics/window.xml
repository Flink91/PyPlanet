{% import 'core.views/generics/uiElements.xml' as ui %}

<frame pos="-160 90" z-index="50"> <!-- set z-index high enough -->
	<frame pos="160 -90"> <!-- reset to 0,0 -->

  <frame pos="-120 70"> <!-- window position -->
      {% block header %}
          <label pos="0 0" textsize="5" size="220 7" text="{{title}}" halign="left" valign="top" textprefix="{{icon}}  " textfont="BiryaniDemiBold"/>
            {% if fields %}
                {{ ui.button("", id+"__list_button_refresh", 226,0,6,6,"ddd") }} >
                {{ ui.decoratedbutton("✖", id+"__list_button_close", 232, 0, 6,6,"d00","000") }} >

            {% else %}
               {{ ui.decoratedbutton("x", id+"__button_close", 232, 0, 7, 7, "d00", "000") }}
            {% endif %}

          <quad pos="120 0" size="240 7" bgcolor="0005" halign="center" valign="top"/>
          <quad pos="120 0" size="240 140" bgcolor="0003" halign="center"/>
     {% endblock %}

      <frame pos="0 -18">
        {% block contents %} {% endblock %}
      </frame>
    </frame>
	</frame>
  <quad size="320 180" bgcolor="FFFA" style="Bgs1" substyle="BgDialogBlur" bluramount="3" />
</frame>

<script><!-- {% include 'core.views/generics/scripts/includes.Script.Txt' %} --></script>
<script><!-- {% include 'core.views/generics/scripts/uiElements.Script.Txt' %} --></script>
{% block maniascript %} {% endblock %}
<script><!-- {% include 'core.views/generics/scripts/main.Script.Txt' %} --></script>
