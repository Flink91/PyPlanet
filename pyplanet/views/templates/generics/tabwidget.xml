{% import 'core.views/generics/uiElements.xml' as ui %}

{% block before %} {% endblock %}

<!-- <frame pos="{{ widget_x }} {{ widget_y }}" z-index="100" class="{% if distraction_hide %}distraction-hide{% endif %}"> -->
  <frame pos="{{ widget_x }} {{ widget_y }}" z-index="100">
  {% block title %}
      {% if title %}
          <quad pos="0 -5" z-index="0" size="50 0.25" bgcolor="0ff" valign="bottom" opacity="1"/>
          {% if open_action %}
          <label pos="25 -3" z-index="1" size="50 6" text="{{ title }}" textfont="gotham/gotham-medium" textsize="1"
                 textemboss="1" halign="center" valign="center2" focusareacolor1="0000" focusareacolor2="0000"
                 action="{{ id }}__open_widget" scriptevents="1"/>
          {% else %}
          <label pos="25 -3" z-index="1" size="50 6" text="{{ title }}" textfont="gotham/gotham-medium" textsize="1"
                 textemboss="1" focusareacolor1="0000" focusareacolor2="0000" halign="center" valign="center2"/>
          {% endif %}
      {% endif %}
  {% endblock %}

  <frame pos="0 {% if title %}-8.5{% else %}0{% endif %}">
    {% block content %}{% endblock %}
  </frame>
</frame>
{% block after %}{% endblock %}


<script><!-- {% include 'core.views/generics/scripts/includes.Script.Txt' %} --></script>
<script><!-- {% include 'core.views/generics/scripts/uiElements.Script.Txt' %} --></script>
<script><!-- {% include 'core.views/generics/scripts/toggleUi.Script.Txt' %} --></script>
{% block maniascript %} {% endblock %}
<script><!-- {% include 'core.views/generics/scripts/main.Script.Txt' %} --></script>
