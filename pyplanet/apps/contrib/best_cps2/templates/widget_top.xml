{% extends 'core.views/generics/widget.xml' %}


  {% block content %}
  <frame pos="0 0">
    <label pos="1 -2" size="30 4" textsize="1" halign="left" valign="center2" id="RecordHolder"/>
    <quad size="30 4" bgcolor="001" opacity="0.3"/>
  </frame>

  {% for n in range(20) %}
  <frame
    pos="{% if (n % 11) == 0 %}32.65{% else %}{{ ((n % 11) * 20.5)+32.65 }}{% endif %} -{{ (((n // 11) * 4.1) - 0)}}">

    <label pos="1 -2" size="18 4" textsize="1" halign="left" valign="center2" text="{{ n }}" id="Cp_{{ n }}"/>
    <quad id="Bg_{{ n }}" size="20 4" bgcolor="000" opacity="0.3"/>

  </frame>
  {% endfor %}
  {% endblock %}


  {% block maniascript %}
<script><!-- {% include 'best_cps2/widget.Script.txt' %} --></script>
  {% endblock %}

